  pod 'Koloda', '~> 4.3.1'
  pod 'SwiftInstagram', '~> 1.1.0' 
  #rx_swift

  target 'FollocareTests' do
    inherit! :search_paths
    # Pods for testing
    #rx_swift
  end

end
